{
  "app-id": "com.enjoyingfoss.Parlera",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "22.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "parlera",
  "separate-locales": false,
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--socket=pulseaudio"
  ],
  "modules": [
    {
      "name": "parlera",
      "buildsystem": "simple",
      "build-commands": [
        "cp -R parlera/bin/ /app/parlera",
        "chmod +x /app/parlera/parlera",
        "mkdir -p /app/bin/",
        "mkdir -p /app/lib/",
        "ln -s /app/parlera/parlera /app/bin/parlera",
        "if [ $(arch)=\"aarch64\"  ]; then sed -si \"/Exec=/cExec=env LIBGL_ALWAYS_SOFTWARE=1 parlera\" parlera/com.enjoyingfoss.Parlera.desktop; fi",
        "install -Dm644 parlera/icons/symbolic/com.enjoyingfoss.Parlera-symbolic.svg /app/share/icons/hicolor/symbolic/apps/com.enjoyingfoss.Parlera-symbolic.svg",
        "install -Dm644 parlera/icons/scalable/com.enjoyingfoss.Parlera.svg /app/share/icons/hicolor/scalable/apps/com.enjoyingfoss.Parlera.svg",
        "install -Dm644 parlera/com.enjoyingfoss.Parlera.desktop /app/share/applications/com.enjoyingfoss.Parlera.desktop",
        "install -Dm644 parlera/com.enjoyingfoss.Parlera.appdata.xml /app/share/applications/com.enjoyingfoss.Parlera.appdata.xml"
      ],
      "sources": [
        {
          "type": "archive",
          "only-arches": [
            "x86_64"
          ],
          "url": "https://github.com/EnjoyingFOSS/parlera/releases/download/3.0.1/parlera-linux-x86_64.tar.gz",
          "sha256": "ec58c8d8bb43599e7f5cbbd1dafd7680ab9f00a5c52b382d253d0aca574ee8b6",
          "dest": "parlera"
        },
        {
          "type": "archive",
          "only-arches": [
            "aarch64"
          ],
          "url": "https://github.com/EnjoyingFOSS/parlera/releases/download/3.0.1/parlera-linux-aarch64.tar.gz",
          "sha256": "0b5183bd1512fdbb296a32974370b35805fa4b0ddd00e9aeda496d902aa24376",
          "dest": "parlera"
        }
      ]
    }
  ]
}